{
  "name": "Futility",
  "version": "1.0.0",
  "description": "The simple web framework",
  "main": "server.js",
  "scripts": {
    "build": ". bin/build",
    "clean": "rimraf dist/",
    "dev": "onchange -i -k 'config/**/*' 'package.json' 'server.js' -- yarn start-server",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "format-dist": "prettier --log-level silent --write dist/",
    "render": ". bin/render",
    "start": "NODE_ENV=production yarn start-server",
    "start-server": "node server.js",
    "validate": "yarn format-check"
  },
  "author": "dylanized",
  "license": "ISC",
  "devDependencies": {
    "onchange": "^7.1.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "config": "^3.3.9",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "pino-http": "^8.5.1"
  }
}
