/* UTILITY CLASSES */

/* border */
<% for (const width_suffix in styles.borderWidths) { -%>
  .border-<%= width_suffix %> {
    width: <%= styles.borderWidths[width_suffix] %> !important;
  }
  .border-top-<%= width_suffix %> {
    width: <%= styles.borderWidths[width_suffix] %> !important;
  }
  .border-right-<%= width_suffix %> {
    width: <%= styles.borderWidths[width_suffix] %> !important;
  }
  .border-bottom-<%= width_suffix %> {
    width: <%= styles.borderWidths[width_suffix] %> !important;
  }
  .border-left-<%= width_suffix %> {
    width: <%= styles.borderWidths[width_suffix] %> !important;
  }
<% } %>

/* colors */
<% for (const color_slug in styles.colors) { -%>
  .text-<%= color_slug %> {
    color: var(--color-<%= color_slug %>) !important;
  }
  .bg-<%= color_slug %> {
    background-color: var(--color-<%= color_slug %>) !important;
  }
  .border-<%= color_slug %> {
    border-color: var(--color-<%= color_slug %>) !important;
  }
<% } %>

/* cursor */
.cursor-pointer {
  cursor: pointer !important;
}

/* display */
.d-block {
  display: inline !important;
}
.d-flex {
  display: flex !important;
}
.d-grid {
  display: grid !important;
}
.d-inline {
  display: inline !important;
}
.d-inline-block {
  display: inline !important;
}
.d-none {
  display: none !important;
}

/* flex align-items */
.align-normal {
  align-items: normal;
}
.align-stretch {
  align-items: stretch;
}
.align-center {
  align-items: center;
}
.align-start {
  align-items: start;
}
.align-end {
  align-items: end;
}
.align-flex-start {
  align-items: flex-start;
}
.align-flex-end {
  align-items: flex-end;
}

/* flex justify-content */
.justify-center {
  justify-content: space-between !important;
}
.justify-start {
  justify-content: space-between !important;
}
.justify-space-around {
  justify-content: space-around !important;
}
.justify-space-between {
  justify-content: space-between !important;
}
.justify-space-evenly {
  justify-content: space-evenly !important;
}

/* float */
.float-left {
  float: left !important;
}
.float-right {
  float: right !important;
}


/* margin */
<% for (const spacer_id in styles.spacers) { -%>
  .m-<%= spacer_id %> {
    margin: var(--sp-<%= spacer_id %>) !important;
  }
  .mt-<%= spacer_id %> {
    margin-top: var(--sp-<%= spacer_id %>) !important;
  }
  .mr-<%= spacer_id %> {
    margin-right: var(--sp-<%= spacer_id %>) !important;
  }
  .mb-<%= spacer_id %> {
    margin-bottom: var(--sp-<%= spacer_id %>) !important;
  }
  .ml-<%= spacer_id %> {
    margin-left:var(--sp-<%= spacer_id %>) !important;
  }
  .mx-<%= spacer_id %> {
    margin-left: var(--sp-<%= spacer_id %>) !important;
    margin-right: var(--sp-<%= spacer_id %>) !important;
  }
  .my-<%= spacer_id %> {
    margin-bottom: var(--sp-<%= spacer_id %>) !important;
    margin-top: var(--sp-<%= spacer_id %>) !important;
  }
<% } %>

/* padding */
<% for (const spacer_id in styles.spacers) { -%>
  .p-<%= spacer_id %> {
    padding: var(--sp-<%= spacer_id %>) !important;
  }
  .pt-<%= spacer_id %> {
    padding-top: var(--sp-<%= spacer_id %>) !important;
  }
  .pr-<%= spacer_id %> {
    padding-right: var(--sp-<%= spacer_id %>) !important;
  }
  .pb-<%= spacer_id %> {
    padding-bottom: var(--sp-<%= spacer_id %>) !important;
  }
  .pl-<%= spacer_id %> {
    padding-left: var(--sp-<%= spacer_id %>) !important;
  }
  .px-<%= spacer_id %> {
    padding-left: var(--sp-<%= spacer_id %>) !important;
    padding-right: var(--sp-<%= spacer_id %>) !important;
  }
  .py-<%= spacer_id %> {
    padding-bottom: var(--sp-<%= spacer_id %>) !important;
    padding-top: var(--sp-<%= spacer_id %>) !important;
  }
<% } %>

/* position */
.position-relative {
  position: relative !important;
}
.position-absolute {
  position: absolute !important;
}
<% for (const spacer_id in styles.spacers) { -%>
  .top-<%= spacer_id %> {
    top: var(--sp-<%= spacer_id %>) !important;
  }
  .right-<%= spacer_id %> {
    right: var(--sp-<%= spacer_id %>) !important;
  }
  .bottom-<%= spacer_id %> {
    bottom: var(--sp-<%= spacer_id %>) !important;
  }
  .left-<%= spacer_id %> {
    left: var(--sp-<%= spacer_id %>) !important;
  }
<% } %>

/* text alignment */
.text-left {
  text-align: left !important;
}
.text-center {
  text-align: center !important;
}
.text-right {
  text-align: right !important;
}

/* text decoration */
.text-italic {
  font-style: italic !important;
}
.text-strike {
  text-decoration: line-through !important;
}
.text-underline {
  text-decoration: underline !important;
}

/* text font */
<% for (const size_suffix in styles.textSizes) { -%>
  .text-<%= size_suffix %> {
    font-size: var(--text-<%= size_suffix %>) !important;
  }
<% } %>

/* text size */
<% for (const font_slug in styles.textFonts) { -%>
  .text-<%= font_slug %> {
    font-family: var(--font-<%= font_slug %>) !important;
  }
<% } %>

/* text transform */
.text-uppercase {
  text-transform: uppercase !important;
}

/* text weight */
.text-bold {
  font-weight: bold !important;
}
.text-normal {
  font-weight: normal !important;
}

/* height spacers */
<% for (const spacer_id in styles.spacers) { -%>
  .h-<%= spacer_id %> {
    height: <%= styles.spacers[spacer_id] %> !important;
  }

  .max-h-<%= spacer_id %> {
    max-height: <%= styles.spacers[spacer_id] %> !important;
  }

  .min-h-<%= spacer_id %> {
    min-height: <%= styles.spacers[spacer_id] %> !important;
  }
<% } %>

/* width spacers */
<% for (const spacer_id in styles.spacers) { -%>
  .w-<%= spacer_id %> {
    width: <%= styles.spacers[spacer_id] %> !important;
  }

  .max-w-<%= spacer_id %> {
    max-width: <%= styles.spacers[spacer_id] %> !important;
  }

  .min-w-<%= spacer_id %> {
    min-width: <%= styles.spacers[spacer_id] %> !important;
  }
<% } %>

/* width percentage */
<% for (const width_suffix in styles.widths) { -%>
  .w-<%= width_suffix %> {
    width: <%= styles.widths[width_suffix] %> !important;
  }
<% } %>

/* width px */
<% for (const width_suffix in styles.widthsPx) { -%>
  .w-<%= styles.widthsPx[width_suffix] %> {
    width: <%= styles.widthsPx[width_suffix] %> !important;
  }
<% } -%>
