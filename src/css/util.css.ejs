/* UTILITY CLASSES */

/* border */
<% for (const width in borderWidths) { -%>
  .border-<%= width %> {
    width: <%= borderWidths[width] %> !important;
  }
  .border-top-<%= width %> {
    width: <%= borderWidths[width] %> !important;
  }
  .border-right-<%= width %> {
    width: <%= borderWidths[width] %> !important;
  }
  .border-bottom-<%= width %> {
    width: <%= borderWidths[width] %> !important;
  }
  .border-left-<%= width %> {
    width: <%= borderWidths[width] %> !important;
  }
<% } %>

/* colors */
<% for (const color in colors) { -%>
  .text-<%= color %> {
    color: var(--color-<%= color %>) !important;
  }
  .bg-<%= color %> {
    background-color: var(--color-<%= color %>) !important;
  }
  .border-<%= color %> {
    border-color: var(--color-<%= color %>) !important;
  }
<% } %>

/* display */
.d-block {
  display: inline !important;
}
.d-inline {
  display: inline !important;
}
.d-inline-block {
  display: inline !important;
}
.d-none {
  display: none !important;
}

/* float */
.f-left {
  float: left !important;
}
.f-right {
  float: right !important;
}

/* margin */
<% for (const spacer in spacers) { -%>
  .m-<%= spacer %> {
    margin: <%= spacers[spacer] %> !important;
  }
  .mt-<%= spacer %> {
    margin-top: <%= spacers[spacer] %> !important;
  }
  .mr-<%= spacer %> {
    margin-right: <%= spacers[spacer] %> !important;
  }
  .mb-<%= spacer %> {
    margin-bottom: <%= spacers[spacer] %> !important;
  }
  .ml-<%= spacer %> {
    margin-left: <%= spacers[spacer] %> !important;
  }
  .mx-<%= spacer %> {
    margin-left: <%= spacers[spacer] %> !important;
    margin-right: <%= spacers[spacer] %> !important;
  }
  .my-<%= spacer %> {
    margin-top: <%= spacers[spacer] %> !important;
    margin-bottom: <%= spacers[spacer] %> !important;
  }
<% } %>

/* padding */
<% for (const spacer in spacers) { -%>
  .p-<%= spacer %> {
    padding: <%= spacers[spacer] %> !important;
  }
  .pt-<%= spacer %> {
    padding-top: <%= spacers[spacer] %> !important;
  }
  .pr-<%= spacer %> {
    padding-right: <%= spacers[spacer] %> !important;
  }
  .pb-<%= spacer %> {
    padding-bottom: <%= spacers[spacer] %> !important;
  }
  .pl-<%= spacer %> {
    padding-left: <%= spacers[spacer] %> !important;
  }
  .px-<%= spacer %> {
    padding-left: <%= spacers[spacer] %> !important;
    padding-right: <%= spacers[spacer] %> !important;
  }
  .py-<%= spacer %> {
    padding-top: <%= spacers[spacer] %> !important;
    padding-bottom: <%= spacers[spacer] %> !important;
  }
<% } %>

/* position */
.p-relative {
  position: relative !important;
}
.p-absolute {
  position: absolute !important;
}
<% for (const spacer in spacers) { -%>
  .top-<%= spacer %> {
    top: <%= spacers[spacer] %> !important;
  }
  .right-<%= spacer %> {
    right: <%= spacers[spacer] %> !important;
  }
  .bottom-<%= spacer %> {
    bottom: <%= spacers[spacer] %> !important;
  }
  .left-<%= spacer %> {
    left: <%= spacers[spacer] %> !important;
  }
<% } %>

/* text alignment */
.text-center {
  text-align: center !important;
}
.text-right {
  text-align: right !important;
}

/* text transform */
.text-uppercase {
  text-transform: uppercase !important;
}

/* text size */
<% for (const size in sizes) { -%>
  .text-<%= size %> {
    font-size: var(--text-<%= size %>) !important;
  }
<% } %>

/* text weight */
.text-bold {
  font-weight: bold !important;
}
.text-normal {
  font-weight: normal !important;
}

/* width % */
<% for (const i in widths) { -%>
  .w-<%= widths[i] %> {
    width: <%= widths[i] %>% !important;
  }
<% } %>

/* width px */
<% for (const i in widthsPx) { -%>
  .w-<%= widthsPx[i] %> {
    width: <%= widthsPx[i] %>px !important;
  }
<% } %>
