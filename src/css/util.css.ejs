/* UTILITY CLASSES */

/* border */
<% for (const width_suffix in theme.borderWidths) { -%>
  .border-<%= width_suffix %> {
    width: <%= theme.borderWidths[width_suffix] %> !important;
  }
  .border-top-<%= width_suffix %> {
    width: <%= theme.borderWidths[width_suffix] %> !important;
  }
  .border-right-<%= width_suffix %> {
    width: <%= theme.borderWidths[width_suffix] %> !important;
  }
  .border-bottom-<%= width_suffix %> {
    width: <%= theme.borderWidths[width_suffix] %> !important;
  }
  .border-left-<%= width_suffix %> {
    width: <%= theme.borderWidths[width_suffix] %> !important;
  }
<% } %>

/* colors */
<% for (const color_slug in theme.colors) { -%>
  .text-<%= color_slug %> {
    color: var(--color-<%= color_slug %>) !important;
  }
  .bg-<%= color_slug %> {
    background-color: var(--color-<%= color_slug %>) !important;
  }
  .border-<%= color_slug %> {
    border-color: var(--color-<%= color_slug %>) !important;
  }
<% } %>

/* cursor */
.cursor-pointer {
  cursor: pointer !important;
}

/* display */
.d-block {
  display: inline !important;
}
.d-flex {
  display: flex !important;
}
.d-inline {
  display: inline !important;
}
.d-inline-block {
  display: inline !important;
}
.d-none {
  display: none !important;
}

/* float */
.f-left {
  float: left !important;
}
.f-right {
  float: right !important;
}

/* margin */
<% for (const spacer_id in theme.spacers) { -%>
  .m-<%= spacer_id %> {
    margin: var(--sp-<%= spacer_id %>) !important;
  }
  .mt-<%= spacer_id %> {
    margin-top: var(--sp-<%= spacer_id %>) !important;
  }
  .mr-<%= spacer_id %> {
    margin-right: var(--sp-<%= spacer_id %>) !important;
  }
  .mb-<%= spacer_id %> {
    margin-bottom: var(--sp-<%= spacer_id %>) !important;
  }
  .ml-<%= spacer_id %> {
    margin-left:var(--sp-<%= spacer_id %>) !important;
  }
  .mx-<%= spacer_id %> {
    margin-left: var(--sp-<%= spacer_id %>) !important;
    margin-right: var(--sp-<%= spacer_id %>) !important;
  }
  .my-<%= spacer_id %> {
    margin-top: var(--sp-<%= spacer_id %>) !important;
    margin-bottom: var(--sp-<%= spacer_id %>) !important;
  }
<% } %>

/* padding */
<% for (const spacer_id in theme.spacers) { -%>
  .p-<%= spacer_id %> {
    padding: var(--sp-<%= spacer_id %>) !important;
  }
  .pt-<%= spacer_id %> {
    padding-top: var(--sp-<%= spacer_id %>) !important;
  }
  .pr-<%= spacer_id %> {
    padding-right: var(--sp-<%= spacer_id %>) !important;
  }
  .pb-<%= spacer_id %> {
    padding-bottom: var(--sp-<%= spacer_id %>) !important;
  }
  .pl-<%= spacer_id %> {
    padding-left: var(--sp-<%= spacer_id %>) !important;
  }
  .px-<%= spacer_id %> {
    padding-left: var(--sp-<%= spacer_id %>) !important;
    padding-right: var(--sp-<%= spacer_id %>) !important;
  }
  .py-<%= spacer_id %> {
    padding-top: var(--sp-<%= spacer_id %>) !important;
    padding-bottom: var(--sp-<%= spacer_id %>) !important;
  }
<% } %>

/* position */
.p-relative {
  position: relative !important;
}
.p-absolute {
  position: absolute !important;
}
<% for (const spacer_id in theme.spacers) { -%>
  .top-<%= spacer_id %> {
    top: var(--sp-<%= spacer_id %>) !important;
  }
  .right-<%= spacer_id %> {
    right: var(--sp-<%= spacer_id %>) !important;
  }
  .bottom-<%= spacer_id %> {
    bottom: var(--sp-<%= spacer_id %>) !important;
  }
  .left-<%= spacer_id %> {
    left: var(--sp-<%= spacer_id %>) !important;
  }
<% } %>

/* text alignment */
.text-left {
  text-align: left !important;
}
.text-center {
  text-align: center !important;
}
.text-right {
  text-align: right !important;
}

/* text transform */
.text-uppercase {
  text-transform: uppercase !important;
}

/* text size */
<% for (const size_suffix in theme.textSizes) { -%>
  .text-<%= size_suffix %> {
    font-size: var(--text-<%= size_suffix %>) !important;
  }
<% } %>

/* text weight */
.text-bold {
  font-weight: bold !important;
}
.text-normal {
  font-weight: normal !important;
}

/* width % */
<% for (const width_suffix in theme.widths) { -%>
  .w-<%= width_suffix %> {
    width: <%= theme.widths[width_suffix] %> !important;
  }
<% } %>

/* width px */
<% for (const width_suffix in theme.widthsPx) { -%>
  .w-<%= theme.widthsPx[width_suffix] %> {
    width: <%= theme.widthsPx[width_suffix] %> !important;
  }
<% } -%>

/* specialty */
ul.list-inline {
  list-style-type: none;
  margin: 0;
  padding: 0;
}
