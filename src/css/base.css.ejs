:root {
  /* color vars */
  <% for (const color_slug in styles.colors) { -%>
    --color-<%= color_slug %>: <%= styles.colors[color_slug] %>;
  <% } %>

  /* spacer vars */
  <% for (const spacer_id in styles.spacers) { -%>
    --sp-<%= spacer_id %>: <%= styles.spacers[spacer_id] %>;
  <% } %>

  /* text font vars */
  <% for (const font_slug in styles.textFonts) { -%>
    --font-<%= font_slug %>: <%= styles.textFonts[font_slug] %>;
  <% } %>

  /* text size vars */
  <% for (const size_suffix in styles.textSizes) { -%>
    --text-<%= size_suffix %>: <%= styles.textSizes[size_suffix] %>;
  <% } %>
}

/* BASE ELEMENTS */

body {
  background-color: var(--color-<%= theme.bodyBgColor %>);
  color: var(--color-<%= theme.bodyTextColor %>);
  font-family: var(--font-<%= theme.bodyFont %>);
  font-size: 120%;
  line-height: 1.4;
  margin: 0;
  padding: 0;
}

code {
  font-family: var(--font-monospace);
  font-size: var(--text-xs);
}

.tag {
  color: var(--color-charcoal);
  display: inline-block;
  background-color: #fff;
  border: 1px solid var(--color-cloud);
  border-radius: .25rem;
  padding: 3px 5px;
}

hr {
  border-color: var(--color-chalk);
  margin: 0 0 var(--sp-3) 0;
}

.row {
  padding: var(--sp-3) 0;
  width: 100%;
}

.container {
  margin: 0 auto;
  max-width: <%= theme.containerWidth %>;
}

section {
  margin: 0 0 var(--sp-5) 0;
}

header {
  padding: var(--sp-2);
  position: relative;
}

main {
  margin: 0;
  padding: var(--sp-3) var(--sp-2) var(--sp-2) var(--sp-2);
}

section {
  margin: 0 0 var(--sp-4) 0;
}

/* headings */

h1,
h2,
h3,
h4,
h5,
h6 {
  color: var(--color-<%= theme.headingColor %>);
  font-family: var(--font-<%= theme.headingFont %>);
  line-height: 1.15;
}

h1 {
  font-size: var(--text-xl2);
  margin: 0 0 var(--sp-3) 0;
}

h2 {
  font-size: var(--text-xl1);
  margin: 0 0 var(--sp-3) 0;
}

h3 {
  font-size: var(--text-lg);
  margin: 0 0 var(--sp-2) 0;
}

h4 {
  font-size: var(--text-md);
  margin: 0 0 var(--sp-2) 0;
}

h5 {
  font-size: var(--text-base);
  margin: 0 0 var(--sp-2) 0;
}

h6 {
  font-size: var(--text-sm);
  margin: 0 0 var(--sp-2) 0;
}

/* basic typography */

p {
  margin: 0 0 var(--sp-3) 0;
}

small {
  font-size: var(--text-sm);
}

ul {
  list-style-type: <%= theme.bodyListType %>;
  margin: 0 0 var(--sp-3) var(--sp-2);
  padding: 0 0 0 var(--sp-2);
}

ul.list-inline {
  list-style-type: none;
  margin: 0;
  padding: 0;
}

ol {
  margin: 0 0 var(--sp-3) var(--sp-3);
  padding: 0 0 0 0;
}

li {
  margin: 0 0 var(--sp-2) 0;
}

/* navigation */

nav {
  display: flex;
  justify-content: space-between;
  margin: 0;
  padding: 0;
}

/* table */

table {
  border: <%= theme.tableBorderWidth %> solid var(--color-<%= theme.tableBorderColor %>);
  border-collapse: collapse;
  margin: 0;
}

table th,
table td {
  border: 1px solid var(--color-<%= theme.tableBorderColor %>);
  font-size: 0.9rem;
  line-height: 1.1;
  padding: var(--sp-1) var(--sp-2);
}

table th {
  border-bottom-width: 3px;
  color: var(--color-slate);
  font-weight: bold;
}

table {
  background-color: #fff;
  margin-bottom: var(--sp-2);
}

table th,
table td {
  padding: var(--sp-2);
}

/* forms */

form {
  max-width: 600px;
}

fieldset {
  display: block;
  margin: 0 0 var(--sp-2) 0;
  padding: var(--sp-2) var(--sp-2) var(--sp-1);
}

label {
  color: var(--color-slate);
  display: block;
  font-size: 0.9rem;
  font-weight: bold;
  line-height: 1.1;
  margin: 0 0 var(--sp-1) 0;
  padding: 0;
}

input[type="text"] {
  border: 1px solid var(--color-cloud);
  border-radius: 3px;
  display: block;
  font-size: 1rem;
  margin: 0 0 var(--sp-1) 0;
  padding: var(--sp-1) var(--sp-2);
}

select {
  border: 1px solid var(--color-cloud);
  border-radius: 3px;
  display: block;
  font-size: 1rem;
  margin: 0 0 var(--sp-2) 0;
  padding: var(--sp-1) var(--sp-2);
}

input[type="submit"] {
  background-color: var(--color-cloud);
  border: none;
  border-radius: 5px;
  color: var(--color-slate);
  cursor: pointer;
  font-weight: bold;
  margin: 0 0 var(--sp-2) 0;
  padding: var(--sp-1) var(--sp-2);
}

button {
  background-color: var(--color-cloud);
  border: none;
  border-radius: 5px;
  color: var(--color-slate);
  font-weight: bold;
  margin: 0 0 var(--sp-2) 0;
  padding: var(--sp-1) var(--sp-2);
}

textarea {
  font-family: var(--font-main);
  margin-bottom: var(--sp-2);
  width: 100%;
}

/* other */

blockquote {
  border-left: <%= theme.blockquoteBorderWidth %> solid var(--color-<%= theme.bloquoteBorderColor %>);
  color: var(--color-slate);
  margin: 0 0 var(--sp-3) 0;
  padding: var(--sp-2) var(--sp-2) var(--sp-1) var(--sp-2);
}
