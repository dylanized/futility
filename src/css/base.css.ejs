:root {
  /* colors */
  <% for (const color_slug in theme.colors) { -%>
    --color-<%= color_slug %>: <%= theme.colors[color_slug] %>;
  <% } %>

  /* spacers */
  <% for (const spacer_id in theme.spacers) { -%>
    --sp-<%= spacer_id %>: <%= theme.spacers[spacer_id] %>;
  <% } %>

  /* text fonts */
  --font-main: Georgia, "Times New Roman", serif;

  /* text sizes */
  <% for (const size_suffix in theme.textSizes) { -%>
    --text-<%= size_suffix %>: <%= theme.textSizes[size_suffix] %>;
  <% } %>
}

/* BASE ELEMENTS */

body {
  background-color: var(--color-white);
  font-size: 1rem;
  color: var(--color-charcoal);
  line-height: 1.2;
  font-family: var(--font-main);
  padding: 0;
  margin: 0;
}

.row {
  width: 100%;
  padding: var(--sp-3) 0;
}

.container {
  max-width: 900px;
  margin: 0 auto;
}

header {
  padding: var(--sp-2);
  position: relative;
}

main {
  margin: 0;
  padding: var(--sp-3) var(--sp-2) var(--sp-2) var(--sp-2);
}

section {
  margin: 0 0 var(--sp-4) 0;
}

/* headings */

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: var(--font-main);
  color: var(--color-feature);
}

h1 {
  font-size: var(--text-xl2);
  margin: 0 0 var(--sp-3) 0;
}

h2 {
  font-size: var(--text-xl1);
  margin: 0 0 var(--sp-3) 0;
}

h3 {
  font-size: var(--text-lg);
  margin: 0 0 var(--sp-2) 0;
}

h4 {
  font-size: var(--text-md);
  margin: 0 0 var(--sp-2) 0;
}

h5 {
  font-size: var(--text-base);
  margin: 0 0 var(--sp-1) 0;
}

h6 {
  font-size: var(--text-sm);
  margin: 0 0 var(--sp-1) 0;
}

/* basic typography */

p {
  font-size: var(--text-base);
  margin: 0 0 var(--sp-2) 0;
}

small {
  font-size: var(--text-sm);
}

ul {
  padding: 0 0 0 var(--sp-1);
  margin: 0 0 var(--sp-2) 0;
  list-style-type: dot;
}

ul.list-inline {
  list-style-type: none;
  margin: 0;
  padding: 0;
}

ol {
  padding: 0 0 0 var(--sp-1);
  margin: 0 0 var(--sp-2) 0;
}

li {
  font-size: var(--text-base);
  margin: 0 0 var(--sp-1) 0;
}

/* navigation */

nav {
  display: flex;
  justify-content: space-between;
  margin: 0;
  padding: 0;
}

/* table */

table {
  border-collapse: collapse;
  border: 3px solid var(--color-silver);
  margin: 0;
}

table th,
table td {
  padding: var(--sp-1) var(--sp-2);
  border: 1px solid var(--color-silver);
  font-size: 0.9rem;
  line-height: 1.1;
}

table th {
  font-weight: bold;
  color: var(--color-slate);
  border-bottom-width: 3px;
}

table {
  background-color: #fff;
  margin-bottom: var(--sp-2);
}

table th,
table td {
  padding: var(--sp-2);
}

/* forms */

form {
  max-width: 600px;
}

fieldset {
  padding: var(--sp-2) var(--sp-2) var(--sp-1);
  margin: 0 0 var(--sp-2) 0;
  display: block;
}

label {
  font-size: 0.9rem;
  color: var(--color-slate);
  line-height: 1.1;
  display: block;
  margin: 0 0 var(--sp-1) 0;
  padding: 0;
  font-weight: bold;
}

input[type="text"] {
  border: 1px solid var(--color-cloud);
  border-radius: 3px;
  font-size: 1rem;
  padding: var(--sp-1) var(--sp-2);
  display: block;
  margin: 0 0 var(--sp-1) 0;
}

select {
  display: block;
  border: 1px solid var(--color-cloud);
  border-radius: 3px;
  margin: 0 0 var(--sp-2) 0;
  padding: 0;
  font-size: 1rem;
  padding: var(--sp-1) var(--sp-2);
}

input[type="submit"] {
  padding: var(--sp-1) var(--sp-2);
  color: var(--color-slate);
  background-color: var(--color-cloud);
  margin: 0 0 var(--sp-2) 0;
  font-weight: bold;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

button {
  padding: var(--sp-1) var(--sp-2);
  color: var(--color-slate);
  background-color: var(--color-cloud);
  margin: 0 0 var(--sp-2) 0;
  font-weight: bold;
  border: none;
  border-radius: 5px;
}

textarea {
  font-family: var(--font-main);
  margin-bottom: var(--sp-2);
  width: 100%;
}

/* other */

blockquote {
  margin: 0 0 var(--sp-3) 0;
  padding: var(--sp-2);
  background-color: var(--color-cloud);
  color: var(--color-slate);
}

