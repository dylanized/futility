      <tbody>
        <% for (const variant_slug in variants) { -%>
          <tr class="<%= variant_slug %>">
            <td>Red</td>
            <td>Orange</td>
            <td>Yellow</td>
            <td>Green</td>
            <td>Blue</td>
            <td>Indigo</td>
            <td>Violet</td>
