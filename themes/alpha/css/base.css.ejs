:root {
  /* color vars */
  <% for (const color_slug in styles.colors) { -%>
    --color-<%= color_slug %>: <%= styles.colors[color_slug] %>;
  <% } %>

  /* spacer vars */
  <% for (const spacer_id in styles.spacers) { -%>
    --sp-<%= spacer_id %>: <%= styles.spacers[spacer_id] %>;
  <% } %>

  /* text font vars */
  <% for (const font_slug in styles.textFonts) { -%>
    --font-<%= font_slug %>: <%= styles.textFonts[font_slug] %>;
  <% } %>

  /* text size vars */
  <% for (const size_suffix in styles.textSizes) { -%>
    --text-<%= size_suffix %>: <%= styles.textSizes[size_suffix] %>;
  <% } %>
}

/* BASE ELEMENTS */

/* focus styles */
:focus {  }

/* keyboard only focus styles */
:focus-visible { }

body {
  background-color: var(--color-<%= theme.bodyBgColor %>);
  color: var(--color-<%= theme.bodyTextColor %>);
  font-family: var(--font-<%= theme.bodyFont %>);
  font-size: var(--text-base);
  line-height: 1.45;
  margin: 0;
  padding: 0;
}

a:link,
a:visited { color: var(--color-cobalt); font-weight: normal; text-decoration: underline; }
a:hover,
a:active { color: var(--color-royal); font-weight: normal; text-decoration: underline; }

code,
.code {
  font-family: var(--font-monospace);
  font-size: .8em;
}

.tag {
  color: var(--color-charcoal);
  display: inline-block;
  background-color: #fff;
  border: 1px solid var(--color-cloud);
  border-radius: .25rem;
  padding: 3px 5px;
}
a.tag {
  text-decoration: none;
  color: var(--color-charcoal);
}

.mark {
  display: inline-block;
  padding: 1px 3px;
  background-color: var(--color-manilla);
  color: var(--color-black);
}

hr {
  border-color: var(--color-chalk);
  margin: 0 0 var(--sp-3) 0;
}

.row {
  padding: var(--sp-3) 0;
  width: 100%;
}

.container {
  margin: 0 auto;
  max-width: <%= theme.containerWidth %>;
}

header {
  padding: var(--sp-2);
  position: relative;
}

main {
  margin: 0;
  padding: var(--sp-3) var(--sp-2) 0 var(--sp-2);
}

section {
  margin: 0 0 var(--sp-5) 0;
}

/* headings */

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: var(--font-<%= theme.headingFont %>);
  font-weight: bold;
  line-height: 1.15;
  font-size: var(--text-base);
  margin: 0 0 var(--sp-4) 0;
}

h1 {
  color: var(--color-<%= theme.primaryColor %>);
  font-size: var(--text-xl);
}

h2 {
  font-size: var(--text-lg);
}

h3 {
  font-size: var(--text-md);
}

h5 {
  font-size: var(--text-sm);
}

h6 {
  font-size: var(--text-xs);
}

/* basic typography */

p {
  margin: 0 0 var(--sp-3) 0;
}

small,
.small {
  font-size: .8em;
}

.lead {
  font-size: 1.1em;
}

ul {
  list-style-type: <%= theme.bodyListType %>;
  margin: 0 0 var(--sp-3) var(--sp-2);
  padding: 0 0 0 var(--sp-2);
}

ul.list-inline {
  list-style-type: none;
  margin: 0;
  padding: 0;
}

ol {
  margin: 0 0 var(--sp-3) var(--sp-3);
  padding: 0 0 0 0;
}

li {
  margin: 0 0 var(--sp-2) 0;
}

/* images */

img {
  vertical-align: middle;
}

img.float-left {
  margin-right: var(--sp-3);
  margin-bottom: var(--sp-2);
}

img.float-right {
  margin-left: var(--sp-2);
  margin-bottom: var(--sp-2);
}

img.centered {
  display: block;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: var(--sp-3);
}

img.border {
  border: 1px solid var(--color-cloud);
  border-radius: .3rem;
  padding: .75rem;
}

a:hover,
a:active img {
  opacity: 0.85;
  transition: opacity .1s;
}

caption {
  display: block;
  font-size: var(--text-sm);
}

/* navigation */

nav {
  display: flex;
  justify-content: space-between;
  margin: 0;
  padding: 0;
}

/* table */

table {
  border: <%= theme.tableBorderWidth %> solid var(--color-<%= theme.tableBorderColor %>);
  border-collapse: collapse;
  margin: 0 0 var(--sp-4) 0;
}

table th,
table td {
  border: 1px solid var(--color-<%= theme.tableBorderColor %>);
  padding: var(--sp-2);
}

table.table-sm th,
table.table-sm td {
  padding: .95rem;
}

table th,
table tfoot td {
  background-color: var(--color-cloud);
  font-family: Verdana;
  border-bottom-width: 3px;
  color: var(--color-slate);
  font-weight: normal;
  font-size: var(--text-sm);
  text-align: center;
}

table tfoot td {
  border-top: 3px solid var(--color-<%= theme.tableBorderColor %>);
}

table.table-borderless,
table.table-borderless th,
table.table-borderless td {
  border: none !important;
  background-color: transparent !important;
}

table.table-hover tbody tr:hover td {
  background-color: var(--color-canary);
}

table.table-striped tr:nth-child(even) td {
  background-color: var(--color-cloud);
}

/* forms */

fieldset {
  display: block;
  border: none;
  margin: 0 0 var(--sp-3) 0;
  padding: 0;
}

label {
  color: var(--color-grapefruit);
  font-family: var(--font-verdana);
  display: block;
  font-size: var(--text-sm);
  font-weight: normal;
  margin: 0 0 var(--sp-1) 0;
  padding: 0;
}

input[type=text],
input[type=number],
textarea {
  border: 1px solid var(--color-cloud);
  border-radius: 3px;
  display: block;
  font-size: 1rem;
  font-family: var(--font-monospace);
  margin: 0 0 var(--sp-1) 0;
  padding: var(--sp-1);
}

input::placeholder {
  color: var(--color-slate);
}

textarea {
  padding: var(--sp-05) var(--sp-1);
  min-height: 5rem;
  margin: 0 0 var(--sp-0) 0;
}

select {
  border: 1px solid var(--color-cloud);
  border-radius: 3px;
  display: block;
  font-size: 1rem;
  font-family: var(--font-monospace);
  margin: 0 0 var(--sp-2) 0;
  padding: var(--sp-1);
}

input[type="checkbox"],
input[type="radio"] {
  all: revert;
}

input[type="file"] {
  cursor: pointer;
  font-family: var(--font-monospace);
  font-size: 1rem;
}

/* buttons */

a.btn,
button,
input[type=submit] {
  background-color: var(--color-charcoal);
  border: none;
  border-radius: 7px;
  color: var(--color-white);
  cursor: pointer;
  font-size: var(--text-sm);
  font-family: var(--font-verdana);
  font-weight: normal;
  padding: .95rem 1.3rem;
  text-decoration: none;
  line-height: 1.45;
  display: inline-block;
  text-align: center;
  vertical-align: text;
}

button:hover,
input[type=submit]:not([disabled]):hover {
  text-decoration: underline;
}

a.btn:hover {
  text-decoration: underline;
  color: #fff !important;
}

.btn-secondary {
  backgrond-color: var(--color-cloud);
}

.btn-outline {
  background-color: white !important;
  border: 2px solid #000 !important;
  color: var(--color-charcoal) !important;
}

.btn-sm {
  border-radius: 5px !important;
  border-width: 1px !important;
  padding: .35rem !important;
  font-size: var(--text-xs) !important;
}

.btn-lg {
  border-radius: 10px !important;
  border-width: 3px !important;
  padding: 1.1rem !important;
  font-size: var(--text-lg) !important;
}

.btn-clear {
  background-color: transparent !important;
  border: none !important;
  color: var(--color-charcoal) !important;
}

a.btn-outline:hover,
a.btn-outline:active {
  color: var(--color-charcoal) !important;
}

input[type=submit][disabled],
button[disabled] {
  background-color: var(--color-cloud) !important;
  color: var(--color-aluminum) !important;
  cursor: default;
}

input[type=submit][disabled].btn-outline,
button[disabled].btn-outline,
input[type=submit][disabled].btn-clear,
button[disabled].btn-clear {
  color: var(--color-aluminum) !important;
  border-color: var(--color-aluminum) !important;
  background-color: transparent !important;
}

button[disabled]:hover {
  text-decoration: none;
}

/* other */

blockquote {
  border-left: 5px solid var(--color-<%= theme.borderColor %>);
  color: var(--color-slate);
  margin: 0 0 var(--sp-3) 0;
  padding: var(--sp-2) var(--sp-2) 1px var(--sp-3);
}

/* panels and cards */

.panel {
  padding: var(--sp-2) var(--sp-2) 1px var(--sp-2);
  border: 4px solid var(--color-cloud);
  margin: 0 0 var(--sp-3) 0;
}

.panel a {
  font-weight: bold;
}

.card {
  border-radius: .3rem;
  border: 1px solid var(--color-cloud);
  padding: 1.35rem 1.5rem 0 1.5rem;
  margin: 0 0 1rem 0;
}
