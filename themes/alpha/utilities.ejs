<%- include('inc/head') %>
<main class="container">
  <h1>Text Utilities</h1>
  <section>
    <h3>Sizes</h3>
    <% for (const size_suffix in styles.textSizes) { -%>
      <p class="text-<%= size_suffix %>">.text-<%= size_suffix %> The quick brown fox jumps over the lazy dog, while the quick brown fox jumps over the lazy dog</p>
    <% } %>
  </section>
  <section>
    <h3>Fonts</h3>
    <table class="text-sm">
      <thead>
        <tr>
          <th class="text-xs w-200px">Font</th>
          <th class="text-xs w-175px">Class</th>
          <th class="text-xs">Example</th>
        </tr>
      </thead>
      <tbody>
        <% for (const font_slug in styles.textFonts) { -%>
          <tr>
            <td class="text-capitalize"><%= font_slug %></td>
            <td><code>.text-<%= font_slug %></code></td>
            <td><code class="text-md text-<%= font_slug %>">The quick brown fox jumps over the lazy dog, while the quick brown fox jumps over the lazy dog</code></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </section>
